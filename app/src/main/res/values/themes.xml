<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>  // Uygulamanın ana rengidir ve en çok görünen rengidir , action bar, tool bar, status bar gibi componentlerin temasını belirlerken kullanılır.
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item> // color primary'nin kullanıldığı componentlerin üzerinde yer alan text, icon gibi componentlerin rengini belirlemek için kullanılır. genelde colorPrimary'nin karışıtı bir renk kullanılır

        <!-- Background color. -->
        <item name="android:colorBackground">@color/white</item> // Ekranların arka plan rengini belirtmek için kullanılır
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item> // buton, switch, material edit text, progress bar gibi componentlerin rengini belirlemek için kullanılır. secondary color yoksa primary color bu öğeleri vurgulamak için de kullanılabilir.
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item> // color secondary'nin kullanıldığı componentlerin üzerinde yer alan text, icon gibi componentlerin rengini belirlemek için kullanılır. genelde colorSecondary'nin karışıtı bir renk kullanılır
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/teal_700</item> // material cardview, menü, bottom sheet gibi componentlerin yüzey rengini belirtmek için kullanılır
        <item name="colorOnSurface">@color/black</item> // color surface'nin kullanıldığı componentlerin üzerinde yer alan text, icon gibi componentlerin rengini belirlemek için kullanılır. genelde colorSurface'in karışıtı bir renk kullanılır

    </style>
    <style name="Theme.NavigationDrawer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.NavigationDrawer.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NavigationDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    /* TextInputLayout için bir tema örneği.
    Oluşturduğunuz TextInputLayoutunuzun burada belirtilen temada olmasını istediğinizde,
    oluşturduğunuz yerde style olarak verebilirsiniz. "name" size kalmıştır istediğiniz ismi verebilirsiniz */
    <style name="TextAppearance.AppCompat.Body1." parent="Widget.Design.TextInputLayout">
        <item name="android:colorBackground">#AAAAAA</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:textSize">10dp</item>
    </style>

</resources>